# Grant Research Automation - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Grant Research Automation"
VERSION="2.0.0"
ENVIRONMENT="development"  # development, testing, production
DEBUG=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/grant_research.log"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_URL="sqlite:///grant_research.db"
DB_ECHO=false  # Set to true to log SQL queries
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# =============================================================================
# API CONFIGURATION
# =============================================================================
# ProPublica NonProfit Explorer API
API_PROPUBLICA_BASE_URL="https://projects.propublica.org/nonprofits/api/v2"
API_PROPUBLICA_RATE_LIMIT=10
API_PROPUBLICA_TIMEOUT=30

# IRS Data Sources
API_IRS_BMF_URL="https://www.irs.gov/pub/irs-teb/"

# Request settings
API_MAX_RETRIES=3
API_BACKOFF_FACTOR=1.0

# Note: API keys are stored encrypted and managed separately
# Use the CLI tool: python setup_auth.py api-keys add <service>

# =============================================================================
# PROCESSING CONFIGURATION  
# =============================================================================
PROCESSING_MAX_CONCURRENT_DOWNLOADS=3
PROCESSING_MAX_CONCURRENT_PROCESSORS=2

# Directories (will be created if they don't exist)
PROCESSING_TEMP_DIR="temp"
PROCESSING_CACHE_DIR="cache"
PROCESSING_OUTPUT_DIR="output"

# Data retention
PROCESSING_CACHE_EXPIRY_DAYS=30
PROCESSING_TEMP_FILE_CLEANUP=true

# OCR settings
PROCESSING_OCR_ENABLED=true
PROCESSING_OCR_LANGUAGE="eng"
PROCESSING_OCR_DPI=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY_SESSION_TIMEOUT_HOURS=8
SECURITY_SESSION_SECRET_KEY=""  # Will auto-generate if empty
SECURITY_API_RATE_LIMIT=100
SECURITY_REQUIRE_API_AUTH=false
SECURITY_LOG_SENSITIVE_DATA=false  # Never set to true in production
SECURITY_ENCRYPT_DATABASE=false

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_TITLE="Grant Research Automation"
DASHBOARD_THEME="light"  # light, dark
DASHBOARD_LAYOUT="wide"  # wide, centered

# Features
DASHBOARD_ENABLE_REAL_TIME_UPDATES=true
DASHBOARD_REFRESH_INTERVAL_SECONDS=5
DASHBOARD_MAX_RESULTS_DISPLAY=100

# Export options
DASHBOARD_ENABLE_EXCEL_EXPORT=true
DASHBOARD_ENABLE_PDF_EXPORT=true
DASHBOARD_ENABLE_CSV_EXPORT=true

# =============================================================================
# DEVELOPMENT SETTINGS (Only for development environment)
# =============================================================================
# These settings are only used when ENVIRONMENT=development

# Enable additional debugging
DEV_VERBOSE_LOGGING=false
DEV_MOCK_API_RESPONSES=false
DEV_SKIP_AUTH=false  # WARNING: Only for development testing

# Test data
DEV_USE_TEST_DATA=false
DEV_TEST_EIN="123456789"

# =============================================================================
# PRODUCTION SETTINGS (Only for production environment)
# =============================================================================
# These settings are only used when ENVIRONMENT=production

# Enhanced security
PROD_REQUIRE_HTTPS=true
PROD_SECURE_COOKIES=true
PROD_SESSION_TIMEOUT_HOURS=4  # Shorter timeout for production

# Performance
PROD_ENABLE_CACHING=true
PROD_MAX_CONCURRENT_WORKFLOWS=5

# Monitoring
PROD_ENABLE_METRICS=true
PROD_METRICS_ENDPOINT="/metrics"